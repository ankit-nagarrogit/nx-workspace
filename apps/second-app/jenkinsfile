pipeline {
  agent any

  tools {
    nodejs 'NodeJS_LTS'
  }

  environment {
    NX_SKIP_NX_CACHE = 'true'
  }

  stages {
    stage('Checkout') {
      steps {
        git 'https://github.com/ankit-nagarrogit/nx-workspace.git' // update this with your actual Git URL
      }
    }

    stage('Install Dependencies') {
      steps {
        bat 'npm install'
      }
    }

    stage('Build second-app') {
      steps {
        bat 'npx nx build second-app'
      }
    }

    stage('Deploy second-app') {
      steps {
        bat '''
          mkdir C:\\var\\www\\second-app
          xcopy /E /I /H /Y apps\\second-app\\dist\\* C:\\var\\www\\second-app\\
          start /B npx serve -s "C:/var/www/first-app" -l 3002
        '''
      }
    }
  }
}
